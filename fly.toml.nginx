# Configuração do Fly.io para Jekyll com Nginx (RECOMENDADO)

app = "crescidos-qualidade"
primary_region = "gru"  # São Paulo (Brasil)

[build]

[env]
  JEKYLL_ENV = "production"
  LANG = "en_US.UTF-8"
  LC_ALL = "en_US.UTF-8"

[http_service]
  internal_port = 80              # Nginx usa porta 80
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

  [[http_service.checks]]
    interval = "15s"
    timeout = "5s"                # Nginx responde rápido
    grace_period = "10s"           # Nginx inicia rápido
    method = "GET"
    path = "/"

[vm]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 128                 # Nginx usa muito menos memória!